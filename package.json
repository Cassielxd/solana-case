{
  "name": "solana-dapp-monorepo",
  "version": "1.0.0",
  "private": true,
  "license": "ISC",
  "workspaces": [
    "server",
    "dapp-frontend"
  ],
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "server:dev": "yarn workspace server dev",
    "server:build": "yarn workspace server build",
    "server:start": "yarn workspace server start",
    "frontend:dev": "yarn workspace dapp-frontend dev",
    "frontend:build": "yarn workspace dapp-frontend build",
    "frontend:preview": "yarn workspace dapp-frontend preview",
    "dev": "concurrently \"yarn server:dev\" \"yarn frontend:dev\"",
    "build": "yarn server:build && yarn frontend:build"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.95.4"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^22.10.2",
    "chai": "^4.3.4",
    "concurrently": "^9.1.2",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.7.3"
  }
}
